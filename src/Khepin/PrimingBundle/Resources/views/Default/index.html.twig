{% extends '::base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <h1>{{ post.title }}</h1>
        <p>
            {{ post.content }}
        </p>
        <hr>
        <h2>Comments</h2>
        {% for comment in post.comments %}
            <p>{{ comment.content }}</p>
        {% endfor %}
        <p>Next Article</p>
        <hr>
    {% endfor %}
{% endblock %}